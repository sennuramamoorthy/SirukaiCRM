# Docker environment variables for CRM Application
# Used by docker-compose.yml via env_file directive

# Express server port (must match EXPOSE in server/Dockerfile)
PORT=3001

# JWT signing secret — change this to a strong random value before any non-local deployment
# Generate one with: openssl rand -base64 48
JWT_SECRET=crm-docker-jwt-secret-change-before-production

# Node environment
NODE_ENV=production

# CORS allowed origin — must match the URL the browser uses to access the app.
CORS_ORIGIN=http://localhost:8000

# PostgreSQL connection string
# Host 'postgres' is the Docker Compose service name (internal DNS)
DATABASE_URL=postgres://crm:crm_password@postgres:5432/crmdb
